{% extends '::base.html.twig' %}

{% block pageheader %} {{ parent() }} {{ 'home page' | trans }}
{% endblock %}

{% block content %}
    <div class="list-group-item">
        <p class="pull-left" style="font-style: italic">TEXT</p>
        <a download="products.json" class="btn btn-primary pull-right" href="#">(COUNT)</a>
        <p>&nbsp</p>
    </div>

    <div class="row">
        {% for phone in products %}
        <div class="col-sm-4 col-lg-4 col-md-4" style="padding-top: 20px; cursor:pointer;" onclick="location.href='#';">
            <div class="thumbnail">
                <div style="width:260px;height:160px;overflow:hidden"> <!-- height=122 -->
                    <img src="{{ phone.getImage() }}" alt="">
                </div>
                <div class="caption">
                    <h4 class="pull-right">â‚¬</h4>
                    <h5><a href="#">{{ phone.getPhoneId() }}</a></h5>
                    <p>{{ phone.getOs() }}</p>
                </div>
                <div class="ratings">
                    {#<p class="pull-right">text</p>#}
                    {% if (phone.costs) %}
                        <p>
                        {% for cost in phone.costs %}
                            <a href="{{ cost.deeplink }}">{{ cost.cost }}</a>&nbsp&nbsp
                        {% endfor %}
                        </p>
                    {% endif %}
                    <p>
                        <span class="glyphicon glyphicon-star"></span>
                        <span class="glyphicon glyphicon-star"></span>
                        <span class="glyphicon glyphicon-star"></span>
                    </p>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}


